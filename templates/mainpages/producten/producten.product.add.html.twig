{% extends 'mainpages/mainpages.layout.html.twig' %}

{% block title %}Producten | Product toevoegen{% endblock %}
{% block active0 %}active{% endblock %}

{% block body %}
  <h5>Product toevoegen:</h5>
  <p><span class="badge badge-warning">WAARSCHUWING</span> Dit product wordt NIET aan de voorraad toegevoegd, maar moet eerst bestelt worden! </p>
  {{ form_start(addProductForm , {attr: {novalidate: 'novalidate'}})}}
  {{ form_widget(addProductForm) }}
  <a class="btn btn-danger btn-sm mb-5" href="{{ path('producten') }}"><i class="fas fa-arrow-left"></i> Terug</a>
  <button type="submit" class="btn btn-primary btn-sm mb-5"><i class="fas fa-plus"></i> Toevoegen</button>
  {{ form_end(addProductForm) }}
{% endblock %}