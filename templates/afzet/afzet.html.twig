{% extends 'layout.html.twig' %}

{% block title %} Afzet | Overzicht {% endblock %}

{% block content %}
  {#SHISHA MODE OFF#}
  {% if app.session.get('mode') == 'default' %}
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="row my-2">
          <h5 class="ml-3">Afzet per artikel:</h5>
        </div>
        <a class="btn btn-dark btn-block my-2" onclick="this.blur();" data-toggle="collapse" href="#artikelen0"
           role="button" aria-expanded="false" aria-controls="artikelen0">
          <h5 class="">Specials</h5>
        </a>
        <div class="collapse show my-2" id="artikelen0">
          <table class="table table-hover table-sm table-responsive-md">
            <thead>
            <tr>
              <th style="width: 30%">Categorie</th>
              <th style="width: 50%">Naam</th>
              <th style="width: 8%; min-width: 200px;">Totaal verkocht</th>
            </tr>
            </thead>
            <tbody>
            {% for artikel in artikelen0 %}
              <tr>
                <td>{{ artikel.categorie }}</td>
                <td>{{ artikel.naam }}</td>

                <td>{{ artikel.afzet }}</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <a class="btn btn-dark btn-block my-2" onclick="this.blur();" data-toggle="collapse" href="#artikelen1"
           role="button" aria-expanded="false" aria-controls="artikelen1">
          <h5 class="">Actieve verkoop</h5>
        </a>
        <div class="collapse my-2" id="artikelen1">
          <table class="table table-hover table-sm table-responsive-md">
            <thead>
            <tr>
              <th style="width: 30%">Categorie</th>
              <th style="width: 50%">Naam</th>
              <th style="width: 8%; min-width: 200px;">Totaal verkocht</th>
            </tr>
            </thead>
            <tbody>
            {% for artikel in artikelen1 %}
              <tr>
                <td>{{ artikel.categorie }}</td>
                <td>{{ artikel.naam }}</td>

                <td>{{ artikel.afzet }}</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <a class="btn btn-dark btn-block my-2" onclick="this.blur();" data-toggle="collapse" href="#artikelen2"
           role="button" aria-expanded="false" aria-controls="artikelen2">
          <h5 class="">Blacklist</h5>
        </a>
        <div class="collapse my-2" id="artikelen2">
          <table class="table table-hover table-sm table-responsive-md">
            <thead>
            <tr>
              <th style="width: 30%">Categorie</th>
              <th style="width: 50%">Naam</th>
              <th style="width: 8%; min-width: 200px;">Totaal verkocht</th>
            </tr>
            </thead>
            <tbody>
            {% for artikel in artikelen2 %}
              <tr>
                <td>{{ artikel.categorie }}</td>
                <td>{{ artikel.naam }}</td>

                <td>{{ artikel.afzet }}</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  {#SHISHA MODE ON#}
  {% elseif app.session.get('mode') == 'shisha' %}
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="row my-2">
          <h5 class="ml-3">Afzet per artikel:</h5>
        </div>
        <table class="table table-hover table-sm ">
          <thead>
          <tr>
            <th style="width: 80%">Smaak</th>
            <th style="width: 8%; min-width: 200px;">Totaal verkocht</th>
          </tr>
          </thead>
          <tbody>
          {% for artikel in artikelen %}
            <tr>
              <td>{{ artikel.naam }}</td>
              <td>{{ artikel.afzet }}</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  {% endif %}
{% endblock %}