{% extends 'layout.html.twig' %}

{% block title %} Voorraad | Voorraad per artikel {% endblock %}

{% block content %}
  {#SHISHA MODE OFF#}
  {% if app.session.get('mode') == 'default' %}
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <h5>Artikelen:</h5>
          <a class="btn btn-dark btn-block my-2" onclick="this.blur();" data-toggle="collapse" href="#artikelen0"
             role="button" aria-expanded="false" aria-controls="artikelen0">
            <h5 class="">Specials</h5>
          </a>
          <div class="collapse show my-2" id="artikelen0">
            <table class="table table-hover table-sm table-responsive-md">
              <thead>
              <tr>
                <th style="width: 40%">Categorie</th>
                <th style="width: 30%">Naam</th>
                <th style="width: 15%">Huidige voorraad</th>
                <th style="width: 15%">Minimale voorraad</th>
              </tr>
              </thead>
              <tbody>
              {% for artikel in artikelen0 %}
                <tr>
                  <td>{{ artikel.categorie }}</td>
                  <td>{{ artikel.naam }}</td>
                  <td>
                    {{ artikel.voorraad }}
                    {% if artikel.voorraad == 0 %}
                      <span class="ml-2 badge badge-danger badge-pill">Voorraad op!</span>
                    {% elseif artikel.voorraad < artikel.minimaleVoorraad and artikel.voorraad != 0 %}
                      <span class="ml-2 badge badge-primary badge-pill">Onder MV!</span>
                    {% endif %}
                  </td>
                  <td>
                    {% if artikel.minimaleVoorraad == null %}
                      <span class="badge badge-danger">Niet ingevuld!</span>
                    {% else %}
                      {{ artikel.minimaleVoorraad }}
                    {% endif %}
                  </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

