{% extends 'mainpages/mainpages.layout.html.twig' %}

{% block title %}Bestelling detail{% endblock %}
{% block active3 %}active{% endblock %}
{% block username %} {{ app.user.username }} {% endblock %}

{% block body %}

  <h5>Bestelling detail:</h5>
  <table class="table table-sm table-striped table-hover table-responsive-lg" id="myTable1">
    <tbody id="myTable">
    <tr>
      <th> Categorie:</th>
      <td> {{ bestelling.categorie }}</td>
    </tr>
    <tr>
      <th> Product:</th>
      <td> {{ bestelling.productnaam }}</td>
    </tr>
    <tr>
      <th> Aantal:</th>
      <td> {{ bestelling.besteldaantal }}</td>
    </tr>
    <tr>
      <th> Inkoopprijs:</th>
      <td>€ {{ bestelling.inkoopprijs|number_format(2, ',', '.') }}</td>
    </tr>
    <tr>
      <th> Prijs per product:</th>
      <td>€ {{ (bestelling.inkoopprijs / bestelling.besteldaantal) |number_format(2, ',', '.') }}</td>
    </tr>
    {#<tr>#}
      {#<th> Gewicht per product:</th>#}
      {#<td> {{ bestelling.gewicht }} gram</td>#}
    {#</tr>#}
    {#<tr>#}
      {#<th> Minimale verkoopprijs per product:</th>#}
      {#<td>€ {{ bestelling.minimaleVerkoopprijs|number_format(2, ',', '.') }}</td>#}
    {#</tr>#}
    <tr>
      <th> Korting:</th>
      <td> {{ bestelling.korting }}%</td>
    </tr>
    <tr>
      <th> Besteldatum:</th>
      <td> {{ bestelling.besteldatum|date("d-m-Y") }}</td>
    </tr>
    <tr>
      <th> Ontvangstdatum:</th>
      <td> {{ bestelling.ontvangstdatum|date("d-m-Y") }}</td>
    </tr>
    {% if bestelling.extraInfo != null %}
      <tr>
        <th> Extra informatie:</th>
        <td> {{ bestelling.extraInfo }}</td>
      </tr>
    {% endif %}

    </tbody>
  </table>
  <a class="btn btn-danger btn-sm mb-5" href="{{ path('bestellingen') }}"><i class="fas fa-arrow-left"></i> Terug</a>
{% endblock %}