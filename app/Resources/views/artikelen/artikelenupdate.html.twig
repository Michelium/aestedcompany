{% extends 'layout.html.twig' %}

{% block title %} Artikelen | Artikel updaten {% endblock %}

{% block content %}

  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <h5>Artikel updaten</h5>

        <p><span class="badge badge-warning badge-pill">Waarschuwing</span> Als je dit aanpast wordt het artikel ook aangepast bij alle vorige (klanten)bestellingen!</p>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        {{ form_row(form.naam) }}
        {{ form_row(form.inkoopprijs) }}
        {{ form_row(form.minimaleVerkoopprijs) }}
        {{ form_row(form.gewicht) }}
        {{ form_row(form.adviesprijs) }}
        {{ form_row(form.minimaleVoorraad) }}

        <button type="button" class="btn btn-danger btn-sm" onclick="window.history.back()"><i class="fas fa-arrow-left"></i> Terug</button>
        <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-pen"></i> Updaten</button>

        {{ form_widget(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
      </div>
    </div>
  </div>

{% endblock %}