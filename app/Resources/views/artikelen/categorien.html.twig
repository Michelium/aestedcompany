{% extends 'layout.html.twig' %}

{% block title %} Artikelen | Categoriën {% endblock %}

{% block content %}
  {#SHISHA MODE OFF#}
  {% if app.session.get('mode') == 'default' %}
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="row">
            <h5 class="ml-3">Categoriën:</h5>
            <a class="btn btn-success btn-sm ml-auto mr-3 my-2" href="{{ path('artikelen_categorienCreate') }}"><i class="fas fa-plus"></i> Categorie toevoegen</a>
          </div>
          <table class="table table-hover table-sm">
            <thead>
            <tr>
              <th style="width: 85%">Naam</th>
              <th style="width: 15%; min-width: 230px;">Acties</th>
            </tr>
            </thead>
            <tbody>
            {% for categorie in categorien %}
              <tr>
                <td>{{ categorie.naam }}</td>
                <td>
                  <a class="btn btn-warning btn-sm mx-1" href="{{ path('artikelen_categorienUpdate', {'id': categorie.id}) }}"><i class="fas fa-pen"></i> Update</a>
                  <a class="btn btn-danger btn-sm mx-1" href="{{ path('artikelen_categorienDelete', {'id': categorie.id}) }}"><i class="fas fa-trash"></i> Delete</a>
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    {#SHISHA MODE ON#}
  {% elseif app.session.get('mode') == 'shisha' %}
    <div class="row">
      <span class="alert alert-danger">Pagina niet beschikbaar in shisha mode.</span>
    </div>
  {% endif %}
{% endblock %}